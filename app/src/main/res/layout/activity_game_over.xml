<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kristoffermichelsen.reallasersurvival.GameOverActivity"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over"
        android:textSize="45dp"
        android:id="@+id/gameOver"
        android:textColor="@color/material_grey_50"
        android:focusableInTouchMode="false"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score:"
        android:textSize="25dp"
        android:id="@+id/yourScore"
        android:textColor="@color/material_grey_50"
        android:focusableInTouchMode="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/gameOver"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top 3"
        android:textSize="25dp"
        android:id="@+id/top3"
        android:textColor="@color/material_grey_50"
        android:focusableInTouchMode="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/yourScore"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1"
        android:textSize="20dp"
        android:id="@+id/no1"
        android:textColor="@color/material_grey_50"
        android:focusableInTouchMode="false"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/top3"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#2"
        android:textSize="20dp"
        android:id="@+id/no2"
        android:textColor="@color/material_grey_50"
        android:focusableInTouchMode="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/no1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#3"
        android:textSize="20dp"
        android:id="@+id/no3"
        android:textColor="@color/material_grey_50"
        android:focusableInTouchMode="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/no2"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play again"
        android:id="@+id/playAgainButton"
        android:textSize="22dp"
        android:background="@drawable/start_button"
        android:textColor="@color/material_grey_50"
        android:width="150dp"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/no3"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/mainMenuButton"
        android:textSize="22dp"
        android:background="@drawable/highscore_button"
        android:textColor="@color/material_grey_50"
        android:width="150dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/playAgainButton"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
