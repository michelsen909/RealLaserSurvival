<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kristoffermichelsen.reallasersurvival.mainMenu"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laser Survival"

        android:textSize="28dp"
        android:id="@+id/textView"
        android:textColor="@color/material_grey_50"
        android:focusableInTouchMode="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="AR DESTINE" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button"
        android:layout_marginTop="61dp"
        android:textSize="22dp"
        android:background="@drawable/start_button"
        android:textColor="@color/material_grey_50"
        android:width="150dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:textSize="22dp"
        android:background="@drawable/settings_button"
        android:textColor="@color/material_grey_50"
        android:width="150dp"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/highscore"
        android:layout_alignLeft="@+id/highscore"
        android:layout_alignStart="@+id/highscore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highscore"
        android:id="@+id/highscore"
        android:textSize="22dp"
        android:background="@drawable/highscore_button"
        android:textColor="@color/material_grey_50"
        android:width="150dp"

        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="57dp" />
</RelativeLayout>
